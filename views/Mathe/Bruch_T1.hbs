<script type="text/javascript">

    var input = document.getElementById("a" + {{currentExercise}});
    var table_cell = document.getElementById("t" + {{currentExercise}});

    var bar = document.getElementById("bar");
    var tds = bar.getElementsByTagName("td");

    //document.getElementById("load").click();

    console.log({{currentExercise}});
    for (var i = 0; i <= {{currentExercise}}; i++) {
            //tds[i].style.cssText = 'background-color: yellow';
            //tds[i].style.setProperty('background-color', 'yellow', 'important');
            //tds[i].setAttribute('style', 'background-color:yellow !important');
            tds[i].style.backgroundColor = "yellow";

    }
    

    // CORRECT
    if ({{answerGiven}} == {{correctSolution}}) {
        // green ....
        input.value = {{answerGiven}};
        input.style.border = "3px solid green";
        input.style.color = "green";
        input.style.textDecoration = "none";    
        document.getElementById("n" + {{currentExercise}}).style.display = "inline-block";

        //table_cell.style.backgroundColor = "green";

    // WRONG    
    } else {
        var correction = document.getElementById("c" + {{currentExercise}});
        input.value = {{answerGiven}};
        input.style.border = "3px solid red";
        input.style.color = "red";
        input.style.textDecoration = "line-through";

        correction.style.display = "inline-block";
        correction.style.color = "grey";
        correction.innerHTML = {{correctSolution}};

        table_cell.style.backgroundColor = "red";

    }
</script>
