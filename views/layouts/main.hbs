    /* Fractions */

    .frac {
        display: inline-block;
        position: relative;
        vertical-align: middle;
        letter-spacing: 0.001em;
        text-align: center;
    }
    .frac > span {
        display: block;
        padding: 0.1em;
    }
    .frac span.bo {
        border-top: thin solid black;
    }
    .frac span.s {
        display: none;
    } 

